<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:background="#00959191"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="400" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_input"
        tools:text="400"
        android:inputType="number"
        android:textSize="25dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"/>

    <LinearLayout
        android:id="@+id/linear_layout0"
        style="@style/Linear_Layout_btn_1_9_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_value"
        android:layout_marginTop="50dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_reset"
            android:text="ะก"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_delete"
            android:text="โซ" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout1"
        style="@style/Linear_Layout_btn_1_9_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_division"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_color_expressions"
            android:text="/"
            android:textColor="@color/btn_textColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        style="@style/Linear_Layout_btn_1_9_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="6"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiplication"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_color_expressions"
            android:text="x"
            android:textColor="@color/btn_textColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout3"
        style="@style/Linear_Layout_btn_1_9_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_7"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_8"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            style="@style/btn_linear_layout"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_subtraction"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_color_expressions"
            android:text="-"
            android:textColor="@color/btn_textColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout4"
        style="@style/Linear_Layout_btn_1_9_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            style="@style/btn_linear_layout"
            android:layout_weight="2"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:text="0"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_point"
            style="@style/btn_linear_layout"
            android:layout_weight="3"
            android:background="@drawable/btn_style"
            android:backgroundTint="@color/btn_color_0_9"
            android:textColor="@color/btn_textColor"
            android:text="."/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sum"
            style="@style/btn_linear_layout"
            android:backgroundTint="@color/btn_color_expressions"
            android:text="+"
            android:textColor="@color/btn_textColor"
            android:layout_weight="3"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_equally"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/btn_equally"
        android:text="="
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout4" />

</androidx.constraintlayout.widget.ConstraintLayout>